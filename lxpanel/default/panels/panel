# lxpanel <profile> config file. Manually editing is not recommended.
# Use preference dialog in lxpanel to adjust config when you can.

Global {
    edge=bottom
    allign=center
    margin=0
    widthtype=request
    width=16
    height=16
    transparent=1
    tintcolor=#000000
    alpha=0
    autohide=1
    heightwhenhidden=2
    setdocktype=1
    setpartialstrut=0
    usefontcolor=1
    fontsize=10
    fontcolor=#ffffff
    usefontsize=0
    background=0
    backgroundfile=/usr/share/lxpanel/images/background.png
    iconsize=16
}

