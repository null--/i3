<?xml version="1.0"?>
<metacity_theme>
<info>
  <name>NoirZ-Green</name>
  <author>bvc (bvcmdk@yahoo.com)</author>
  <copyright>GPL</copyright>
  <date>July 2005</date>
  <description>NoirZ</description>
</info>

<frame_geometry name="normal" rounded_top_left="true" rounded_top_right="true">
  <distance name="left_width" value="3"/>
  <distance name="right_width" value="3"/>
  <distance name="bottom_height" value="3"/>
  <distance name="left_titlebar_edge" value="6"/>
  <distance name="right_titlebar_edge" value="6"/>
  <distance name="button_width" value="23"/>
  <distance name="button_height" value="20"/>
  <distance name="title_vertical_pad" value="0"/>
  <border name="title_border" left="5" right="5" top="2" bottom="0"/>
  <border name="button_border" left="0" right="0" top="2" bottom="1"/>
</frame_geometry>

<frame_geometry name="shaded" rounded_top_left="true" rounded_top_right="true">
  <distance name="left_width" value="3"/>
  <distance name="right_width" value="3"/>
  <distance name="bottom_height" value="0"/>
  <distance name="left_titlebar_edge" value="6"/>
  <distance name="right_titlebar_edge" value="6"/>
  <distance name="button_width" value="23"/>
  <distance name="button_height" value="20"/>
  <distance name="title_vertical_pad" value="0"/>
  <border name="title_border" left="5" right="5" top="2" bottom="0"/>
  <border name="button_border" left="0" right="0" top="2" bottom="1"/>
</frame_geometry>

<frame_geometry name="normal_maximized" rounded_top_left="false" rounded_top_right="false">
  <distance name="left_width" value="0"/>
  <distance name="right_width" value="0"/>
  <distance name="bottom_height" value="0"/>
  <distance name="left_titlebar_edge" value="0"/>
  <distance name="right_titlebar_edge" value="0"/>
  <distance name="button_width" value="23"/>
  <distance name="button_height" value="20"/>
  <distance name="title_vertical_pad" value="0"/>
  <border name="title_border" left="5" right="5" top="2" bottom="0"/>
  <border name="button_border" left="0" right="0" top="2" bottom="1"/>
</frame_geometry>

<draw_ops name="draw_title_tile">
  <image filename="title_l-active.png" x="0" y="0" width="object_width" height="height" />
  <image filename="title-active.png" fill_type="tile" x="6" y="0" width="width " height="height"/>
  <image filename="title_r-active.png" x="width - object_width" y="0" width="object_width" height="height"/>
</draw_ops>

<draw_ops name="draw_title_tile_inactive">
  <include name="draw_title_tile"/>
</draw_ops>

<draw_ops name="draw_title_tile_shaded">
  <include name="draw_title_tile"/>
</draw_ops>

<draw_ops name="draw_title_tile_inactive_shaded">
  <include name="draw_title_tile"/>
</draw_ops>

<draw_ops name="draw_title_tile_inactive_normal_maximized">
  <image filename="title-active.png" fill_type="tile" x="0" y="0" width="width " height="height"/>
</draw_ops>

<draw_ops name="draw_title_tile_normal_maximized">
  <image filename="title-active.png" fill_type="tile" x="0" y="0" width="width " height="height"/>
</draw_ops>

<draw_ops name="draw_title_tile_inactive_normal_maximized_shaded">
  <image filename="title-active.png" fill_type="tile" x="0" y="0" width="width " height="height"/>
</draw_ops>

<draw_ops name="draw_title_tile_normal_maximized_shaded">
  <image filename="title-active.png" fill_type="tile" x="0" y="0" width="width " height="height"/>
</draw_ops>

<draw_ops name="left-active">
	<image filename="left-active.png" x="0" y="0" width="width" height="height"/>
</draw_ops>

<draw_ops name="right-active">
	<image filename="right-active.png" x="0" y="0" width="width" height="height"/>
</draw_ops>

<draw_ops name="left-inactive">
  <include name="left-active"/>
</draw_ops>

<draw_ops name="right-inactive">
  <include name="right-active"/>
</draw_ops>

<draw_ops name="bottom-active">
	<image filename="bottom-l-active.png" x="0" y="0" width="6" height="6"/>
	<image filename="bottom-active.png" x="6" y="0" width="width" height="height"/>
	<image filename="bottom-r-active.png" x="width-3" y="0" width="3" height="3"/>
</draw_ops>
<draw_ops name="bottom-inactive">
  <include name="bottom-active"/>
</draw_ops>

<draw_ops name="draw_title_pill">
  <title color="#000000" x="(width - title_width) / 2 + 1" y="(height - title_height) / 2 + 1"/>
  <title color="#749136" x="(width - title_width) / 2" y="(height - title_height) / 2"/>         
</draw_ops>

<draw_ops name="draw_title_pill_inactive">
  <title color="#000000" x="(width - title_width) / 2 + 1" y="(height - title_height) / 2 + 1"/>
  <title color="#3f5223" x="(width - title_width) / 2 " y="(height - title_height) / 2"/>
</draw_ops>

<draw_ops name="bg">
   <rectangle color="#EFEFEF" x="0" y="0" width="width" height="height" filled="true"/>
   <rectangle color="#919191" x="0" y="0" width="width-1" height="height-1" filled="false"/>
</draw_ops>

<draw_ops name="bg-i">
   <rectangle color="#EFEFEF" x="0" y="0" width="width" height="height" filled="true"/>
   <rectangle color="#B7B7B7" x="0" y="0" width="width-1" height="height-1" filled="false"/>
</draw_ops>

<draw_ops name="draw_close_button">
   <image filename="act.svg" x="0" y="0" width="19" height="height"/>
</draw_ops>
<draw_ops name="draw_min_button">
   <image filename="act.svg" x="0" y="0" width="19" height="height"/>
</draw_ops>
<draw_ops name="draw_max_button">
   <image filename="act.svg" x="0" y="0" width="19" height="height"/>
</draw_ops>


<draw_ops name="draw_close_prelight_button">
   <image filename="pre.svg" x="0" y="0" width="19" height="height"/>
</draw_ops>
<draw_ops name="draw_min_prelight_button">
   <image filename="pre.svg" x="0" y="0" width="19" height="height"/>
</draw_ops>
<draw_ops name="draw_max_prelight_button">
   <image filename="pre.svg" x="0" y="0" width="19" height="height"/>
</draw_ops>


<draw_ops name="draw_close_pressed_button">
   <image filename="press.svg" x="0" y="0" width="19" height="height"/>
</draw_ops>
<draw_ops name="draw_min_pressed_button">
   <image filename="press.svg" x="0" y="0" width="19" height="height"/>
</draw_ops>
<draw_ops name="draw_max_pressed_button">
   <image filename="press.svg" x="0" y="0" width="19" height="height"/>
</draw_ops>


<draw_ops name="draw_close_inactive_button">
   <image filename="inact.svg" x="0" y="0" width="19" height="height"/>
</draw_ops>
<draw_ops name="draw_min_inactive_button">
   <image filename="inact.svg" x="0" y="0" width="19" height="height"/>
</draw_ops>
<draw_ops name="draw_max_inactive_button">
   <image filename="inact.svg" x="0" y="0" width="19" height="height"/>
</draw_ops>


<draw_ops name="draw_close_inactive_prelight_button">
   <image filename="pre.svg" x="0" y="0" width="19" height="height"/>
</draw_ops>
<draw_ops name="draw_min_inactive_prelight_button">
   <image filename="pre.svg" x="0" y="0" width="19" height="height"/>
</draw_ops>
<draw_ops name="draw_max_inactive_prelight_button">
   <image filename="pre.svg" x="0" y="0" width="19" height="height"/>
</draw_ops>

<draw_ops name="menu_button">
  <icon  x="3" y="2" width="16" height="16"/>
</draw_ops>


<frame_style name="normal_focused_style" geometry="normal">
   <piece position="title" draw_ops="draw_title_pill"/>
   <piece position="entire_background" draw_ops="bg"/>
  <piece position="left_edge" draw_ops="left-active"/>   
   <piece position="right_edge" draw_ops="right-active"/>
   <piece position="bottom_edge" draw_ops="bottom-active"/>
   <piece position="titlebar" draw_ops="draw_title_tile"/>
   <button function="close" state="normal" draw_ops="draw_close_button"/>
   <button function="close" state="prelight" draw_ops="draw_close_prelight_button"/>
   <button function="close" state="pressed" draw_ops="draw_close_pressed_button"/>
   <button function="minimize" state="normal" draw_ops="draw_min_button"/>
   <button function="minimize" state="prelight" draw_ops="draw_min_prelight_button"/>
   <button function="minimize" state="pressed" draw_ops="draw_min_pressed_button"/>
   <button function="maximize" state="normal" draw_ops="draw_max_button"/>
   <button function="maximize" state="prelight" draw_ops="draw_max_prelight_button"/>
   <button function="maximize" state="pressed" draw_ops="draw_max_pressed_button"/>
   <button function="menu" state="normal" draw_ops="menu_button"/>
   <button function="menu" state="pressed" draw_ops="menu_button"/>
</frame_style>

<frame_style name="normal_unfocused_style" geometry="normal">
   <piece position="title" draw_ops="draw_title_pill_inactive"/>
   <piece position="entire_background" draw_ops="bg-i"/>
   <piece position="left_edge" draw_ops="left-inactive"/> 
   <piece position="right_edge" draw_ops="right-inactive"/>
   <piece position="bottom_edge" draw_ops="bottom-inactive"/>
   <piece position="titlebar" draw_ops="draw_title_tile_inactive"/>
   <button function="close" state="normal" draw_ops="draw_close_inactive_button"/>
   <button function="close" state="prelight" draw_ops="draw_close_inactive_prelight_button"/>
   <button function="close" state="pressed" draw_ops="draw_close_inactive_button"/>
   <button function="minimize" state="normal" draw_ops="draw_min_inactive_button"/>
   <button function="minimize" state="prelight" draw_ops="draw_min_inactive_prelight_button"/>
   <button function="minimize" state="pressed" draw_ops="draw_min_inactive_button"/>
   <button function="maximize" state="normal" draw_ops="draw_max_inactive_button"/>
   <button function="maximize" state="prelight" draw_ops="draw_max_inactive_prelight_button"/>
   <button function="maximize" state="pressed" draw_ops="draw_max_inactive_button"/>
   <button function="menu" state="normal" draw_ops="menu_button"/>
   <button function="menu" state="pressed" draw_ops="menu_button"/>
</frame_style>


<frame_style name="maximized_focused_style" geometry="normal_maximized">
   <piece position="title" draw_ops="draw_title_pill"/>
   <piece position="entire_background" draw_ops="bg"/>
   <piece position="titlebar" draw_ops="draw_title_tile_normal_maximized"/>
   <button function="close" state="normal" draw_ops="draw_close_button"/>
   <button function="close" state="prelight" draw_ops="draw_close_prelight_button"/>
   <button function="close" state="pressed" draw_ops="draw_close_pressed_button"/>
   <button function="minimize" state="normal" draw_ops="draw_min_button"/>
   <button function="minimize" state="prelight" draw_ops="draw_min_prelight_button"/>
   <button function="minimize" state="pressed" draw_ops="draw_min_pressed_button"/>
   <button function="maximize" state="normal" draw_ops="draw_max_button"/>
